apply plugin: "com.android.application"

android {
    compileSdkVersion 28
    defaultConfig {
        applicationId "{{reverse-domain}}.{{app-name-snake}}"
        minSdkVersion 24
        targetSdkVersion 28
        versionCode 1
        versionName "1.0"
        ndk {
            // Tells Gradle to build outputs for the following ABIs and package
            // them into your APK.
            abiFilters {{abi-list-joined}}
        }
    }
    sourceSets {
        main {
            jniLibs {
                srcDir "${System.env.NDK_HOME}/sources/third_party/vulkan/src/build-android/jniLibs"
            }
        }
    }
    buildTypes {
        debug {
            debuggable true
            jniDebuggable true
            minifyEnabled false
            useProguard false
            packagingOptions {
                {{~#each abi-list}}
                doNotStrip "*/{{this}}/*.so"{{/each}}
            }
        }
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile("proguard-android.txt"), "proguard-rules.pro"
        }
    }
}

dependencies {
}
