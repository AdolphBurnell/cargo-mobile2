[workspace]
members = [
    "{{unprefix_path source_root}}/lib",
    "{{unprefix_path source_root}}/lib/src/build",
    "{{unprefix_path source_root}}/{{app_name}}",
    "{{unprefix_path source_root}}/{{app_name}}-desktop",
]

[profile.dev]
opt-level = 1 # works around failure to dead strip macos specific code
debug = 2
rpath = false
lto = false
debug-assertions = true
codegen-units = 16
panic = "unwind"
incremental = true
overflow-checks = true

[profile.release]
opt-level = 3
debug = false
rpath = false
lto = "fat"
debug-assertions = false
codegen-units = 1
panic = "unwind"
incremental = false
overflow-checks = false
