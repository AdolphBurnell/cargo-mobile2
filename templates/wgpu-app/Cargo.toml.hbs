[package]
name = "{{app.name}}"
version = "0.1.0"
authors = ["{{author}}"]
edition = "2018"

[lib]
crate-type = ["staticlib", "cdylib", "rlib"]

[[bin]]
name = "{{app.name}}-desktop"
path = "gen/bin/desktop.rs"

[dependencies]
futures = "0.3.4"
mobile-entry-point = { git = "ssh://git@bitbucket.org/brainium/mobile-entry-point.git" }
wgpu = { git = "https://github.com/francesca64/wgpu-rs" }
winit = { git = "https://github.com/francesca64/winit", branch = "android-pause" }

[target.'cfg(target_os = "android")'.dependencies]
android_logger = "0.8.6"
log = "0.4.8"
ndk-glue = "0.1.0"

[target.'cfg(not(target_os = "android"))'.dependencies]
env_logger = "0.7.1"
