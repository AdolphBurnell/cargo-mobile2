cargo-features = ["default-run"]

[package]
name = "{{app_name}}"
version = "0.1.0"
authors = ["Brainium Studios LLC"]
edition = "2018"
default-run = "{{app_name}}-desktop"

[lib]
crate-type = ["staticlib", "cdylib", "rlib"]

[features]
default = []
dx12 = ["rust-lib/dx12"]
gl = ["rust-lib/gl"]
metal = ["rust-lib/metal"]
vulkan = ["rust-lib/vulkan"]

[dependencies]
rust-lib = { path = "../lib", features = ["serde"] }

[build-dependencies]
build = { path = "../lib/src/build" }
